{
  "name": "sveltekit-blog-mdx",
  "version": "0.5.1",
  "license": "BSD-3-Clause",
  "description": "SvelteKit Image Plugin: how to use the vite-imagetools plugin to bring responsive images in next-gen formats, like WebP, to your Svelte App.",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "npm run generate:manifest && vite build",
    "preview": "vite preview --port 3000",
    "check": "svelte-check --fail-on-warnings",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
    "format": "prettier --write --plugin-search-dir=. .",
    "generate:manifest": "node ./generate-manifest.js",
    "generate:sitemap": "node ./generate-sitemap.js",
    "prettier:check": "prettier --check --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.0",
    "@fontsource/lato": "^4.5.8",
    "@fontsource/lora": "^4.5.9",
    "@fontsource/source-sans-pro": "^4.5.9",
    "@iconify/svelte": "^2.2.1",
    "@rodneylab/sveltekit-components": "^0.2.12",
    "@sveltejs/adapter-static": "^1.0.0-next.32",
    "@sveltejs/kit": "^1.0.0-next.345",
    "@types/object-hash": "^2.2.1",
    "commitlint": "^17.0.1",
    "dayjs": "^1.11.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "mdsvex": "^0.10.5",
    "object-hash": "^3.0.0",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "prettier": "~2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "reading-time": "~1.4.0",
    "sass": "^1.52.1",
    "sharp": "0.30.7",
    "stylelint": "^14.8.5",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-scss": "^4.2.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "svelte-preprocess-import-assets": "^0.1.6",
    "vanilla-lazyload": "^17.8.2",
    "vite": ">=3.0.0 <4.0.0",
    "vite-imagetools": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-image-plugin"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-image-plugin/issues"
  },
  "type": "module",
  "dependencies": {
    "front-matter": "^4.0.2"
  },
  "peerDependencies": {
    "vite": ">=3.0.0 <4.0.0"
  }
}
